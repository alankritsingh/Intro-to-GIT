<%- include("../partials/header"); %>

 
<div class="container">
	<header class="jumbotron">
	<h1>
	    Welcome to the YelpCamp
    </h1>
    <p>
		View our handpicked campgrounds from all over the world!!
	</p>
	<p >
		<a class="btn btn-primary btn-lg" href="/">Back to home Page</a>
	</p>

</header>
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <% campgrounds.forEach(function(camp){ %>
        <div class="col-lg-3 col-sm-6">
		    <div class="card">
			    <img class="card-img-top" src="<%= camp.image %>">
					<h4 class="card-title">
						<%= camp.name %>
					</h4>
				<a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
		    </div>
        </div>
        <% }); %>
    </div>
</div>


<%- include("../partials/footer"); %>