
<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		
		<div style="width: 30%; margin: 0 auto;">
		
			<h1 style="text-aign:center;">
	        Create Your Camp
        </h1>
			<div style="margin: 25px;">
				<form action="/campgrounds" method="POST">
			        <div class="form-group">
				        <input class="form-control" type="text" placeholder="Name of the Camp" name="CampName">
			        </div>
					<div class="form-group">
				        <input class="form-control" type="number" placeholder="Price" name="price" min="0.01" step="0.01">
			        </div>
			        <div class="form-group">
                        <input class="form-control" type="text" placeholder="Paste in the image url here" name="CampImage">
			        </div>
					<div class="form-group">
						<input class="form-control" type="text" placeholder="How would you Describe this camp?" name="description">
					</div>
			        <div class="form-group">
	                    <input class="btn-block btn btn-lg btn-primary" type="submit">
			        </div>
				</form>
			</div>
        
		
		</div>
    </div>
</div>
	

<%- include("../partials/footer") %>
